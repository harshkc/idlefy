{
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./tsconfig.tsbuildinfo",
    "target": "esnext",
    "lib": ["es2017", "DOM"],
    "rootDir": "./src",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "declaration": true,
    "outDir": "dist/modules",
    "preserveConstEnums": true
  },
  "include": ["src/**/*.ts"],
  "exclude": []
}
