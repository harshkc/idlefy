{
  "name": "idlefy",
  "type": "module",
  "version": "1.0.2-beta.2",
  "packageManager": "pnpm@8.15.3",
  "description": "Defer non-critical tasks to run when the main thread is idle",
  "author": {
    "name": "Harsh Choudhary",
    "email": "harsh.hkc1006@gmail.com",
    "url": "https://harshkc.in"
  },
  "license": "MIT",
  "funding": "https://github.com/sponsors/harshkc",
  "homepage": "https://github.com/redbus-labs/idlefy#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/redbus-labs/idlefy.git"
  },
  "bugs": "https://github.com/redbus-labs/idlefy/issues",
  "keywords": [
    "idle",
    "defer",
    "idle-until-urget",
    "requestIdleCallback",
    "cancelIdleCallback",
    "requestIdleCallbackPolyfill",
    "INP",
    "Performance"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/modules/index.d.ts",
      "default": "./dist/index.js"
    },
    "./idleQueue.js": {
      "types": "./dist/modules/idleQueue.d.ts",
      "default": "./dist/modules/idleQueue.js"
    },
    "./idleCbWithPolyfill.js": {
      "types": "./dist/modules/idleCbWithPolyfill.d.ts",
      "default": "./dist/modules/idleCbWithPolyfill.js"
    },
    "./idleValue.js": {
      "types": "./dist/modules/idleValue.d.ts",
      "default": "./dist/modules/idleValue.js"
    },
    "./defineIdleProperty.js": {
      "types": "./dist/modules/defineIdleProperty.d.ts",
      "default": "./dist/modules/defineIdleProperty.js"
    },
    "./defineIdleProperties.js": {
      "types": "./dist/modules/defineIdleProperties.d.ts",
      "default": "./dist/modules/defineIdleProperties.js"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/modules/index.d.ts",
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*",
        "./dist/index.d.ts"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rimraf dist && rimraf tsconfig.tsbuildinfo && tsc -b && rollup -c",
    "build:ts": "tsc -b",
    "build:js": "rollup -c",
    "dev": "unbuild --stub",
    "lint": "eslint .",
    "prepublishOnly": "nr build",
    "release": "bumpp && npm publish",
    "start": "esno src/index.ts",
    "test": "echo \"Warning: no test specified\" && exit 0",
    "typecheck": "tsc --noEmit",
    "prepare": "simple-git-hooks"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.6.4",
    "@antfu/ni": "^0.21.12",
    "@antfu/utils": "^0.7.7",
    "@babel/core": "^7.23.6",
    "@babel/preset-env": "^7.23.6",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-terser": "^0.4.4",
    "@types/node": "^20.11.19",
    "bumpp": "^9.3.0",
    "eslint": "^8.56.0",
    "esno": "^4.0.0",
    "lint-staged": "^15.2.2",
    "pnpm": "^8.15.3",
    "rimraf": "^5.0.5",
    "rollup": "^4.9.1",
    "simple-git-hooks": "^2.9.0",
    "typescript": "^5.3.3",
    "unbuild": "^2.0.0",
    "vite": "^5.1.4"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
